<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syncworks.slightapp.EasyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/easy_ll_btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/White">
            <Button
                android:id="@+id/easy_btn_back"
                style="@style/ButtonText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_black"
                android:text="@string/str_back"/>
            <Button
                android:id="@+id/easy_btn_next"
                style="@style/ButtonText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/btn_green"
                android:text="@string/str_next"/>
        </LinearLayout>
        <com.syncworks.slightapp.widget.StepView
            android:id="@+id/easy_step_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_above="@id/easy_ll_btn_group"/>
        <LinearLayout
            android:id="@+id/easy_ll_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_above="@id/easy_step_view"/>
    </RelativeLayout>
    <!--<RelativeLayout
        android:layout_width="match_parent"
