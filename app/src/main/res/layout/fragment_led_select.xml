<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syncworks.s_light.fragment.LedSelectFragment">
    <LinearLayout
        android:id="@+id/ll_rgb_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:background="@color/White"
        android:orientation="horizontal">
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/rgb_1"
            style="@style/rgbBtn"
            custom:btn_state_enabled="false"
            custom:text_on="✓"
            custom:text_off="RGB 1"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/rgb_2"
            style="@style/rgbBtn"
            custom:btn_state_enabled="false"
            custom:text_on="✓"
            custom:text_off="RGB 2"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/rgb_3"
            style="@style/rgbBtn"
            custom:btn_state_enabled="false"
            custom:text_on="✓"
            custom:text_off="RGB 3"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_led_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_rgb_select"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/White"
        android:orientation="horizontal">
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_1"
            style="@style/ledBtn"
            custom:btn_state_bright="true"
            custom:text_on="✓"
            custom:text_off="1"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_2"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="2"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_3"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="3"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_4"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="4"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_5"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="5"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_6"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="6"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_7"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="7"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_8"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="8"/>
        <com.syncworks.slightapp.widget.LedBtn
            android:id="@id/led_9"
            style="@style/ledBtn"
            custom:text_on="✓"
            custom:text_off="9"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_led_select"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_view_rounded_single">

        <Button
            style="@style/ButtonText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:text="불러오기"/>
    </RelativeLayout>

</RelativeLayout>
