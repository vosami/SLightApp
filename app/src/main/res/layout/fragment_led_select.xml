<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syncworks.s_light.fragment.LedSelectFragment">
    <LinearLayout
        android:id="@+id/ll_rgb_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:background="@color/White"
        android:orientation="horizontal">
        <com.syncworks.slightapp.widget.RgbButton
            android:id="@id/rgb_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="RGB 1"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.RgbButton
            android:id="@id/rgb_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="RGB 2"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.RgbButton
            android:id="@id/rgb_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="RGB 3"
            custom:on_text="✓"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_led_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_rgb_select"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@color/White"
        android:orientation="horizontal">
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="1"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="2"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="3"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="4"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="5"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="6"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="7"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="8"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:id="@id/led_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="9"
            custom:on_text="✓"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_led_select"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_view_rounded_single">
        <Button
            style="@style/ButtonText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue"
            android:text="불러오기"/>
    </RelativeLayout>

</RelativeLayout>
