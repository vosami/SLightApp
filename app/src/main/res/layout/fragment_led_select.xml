<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.syncworks.s_light.fragment.LedSelectFragment">
    <LinearLayout
        android:id="@+id/ll_title_rgb_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:background="@color/Maroon">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:text="test"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_led_select_rgb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_title_rgb_led"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal">
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="1"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="2"
            custom:on_text="✓"
            custom:check="true"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:effect="true"
            custom:check="true"
            custom:off_text="3"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:bright="191"
            custom:effect="true"
            custom:check="false"
            custom:off_text="4"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="5"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="6"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="7"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="8"
            custom:on_text="✓"/>
        <com.syncworks.slightapp.widget.LedButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            custom:off_text="9"
            custom:on_text="✓"/>
    </LinearLayout>
