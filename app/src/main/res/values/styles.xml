<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/DarkGoldenrod</item>
        <item name="colorPrimary">@color/Gold</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="tv_title_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="default_seekbar">
        <item name="android:thumb">@drawable/seek_default_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_default</item>
        <item name="android:max">191</item>
        <item name="android:progress">95</item>
    </style>
    <style name="red_seekbar">
        <item name="android:thumb">@drawable/seek_red_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_red</item>
        <item name="android:max">191</item>
        <item name="android:progress">95</item>
    </style>
    <style name="green_seekbar">
        <item name="android:thumb">@drawable/seek_green_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_green</item>
        <item name="android:max">191</item>
        <item name="android:progress">95</item>
    </style>
    <style name="blue_seekbar">
        <item name="android:thumb">@drawable/seek_blue_thumb</item>
        <item name="android:progressDrawable">@drawable/seek_blue</item>
        <item name="android:max">191</item>
        <item name="android:progress">95</item>
    </style>

</resources>
