<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#919191"
                android:centerColor="#CDCDCD"
                android:centerY="0.5"
                android:endColor="#919191"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#919191"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#FFE4E4"
                    android:endColor="#CC0000"
                    android:angle="0" />
                <stroke
                    android:width="1dp"
                    android:color="#919191"/>
            </shape>
        </clip>
    </item>
</layer-list>